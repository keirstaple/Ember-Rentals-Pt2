{{#if addNewAnnouncement}}
<h1>New Announcement</h1>
<div>
  <form>
    <div class="form-group">
      <label for="city">City</label>
      {{input value=city id="city"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{input value=description id="description"}}
    </div>

    <button {{action 'saveAnnouncement'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
