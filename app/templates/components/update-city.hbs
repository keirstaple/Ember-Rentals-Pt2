{{#if updateCityForm}}
  <h4>Update {{city.name}}, {{city.country}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" placeholder=city.name}}
        </div>
        <div class="form-group">
          <label for="country">Country</label>
          {{input value=country id="country" placeholder=city.country}}
        </div>
        <button {{action 'update' city}}>Save City</button>
      </form>
    </div>
  {{else}}
    <button {{action 'updateCityForm'}}>Update</button>
{{/if}}
