{{#if updateAnnouncementForm}}
  <h4>Update {{rentals.owners}}'s {{rentals.type}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="city">City</label>
          {{input value=city id="city" placeholder=announcements.city}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=announcements.date}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description" placeholder=announcements.description}}
        </div>


        <button {{action 'update' announcements}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateAnnouncementForm'}}>Update</button>
{{/if}}
